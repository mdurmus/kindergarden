@model IEnumerable<personMessage>

@{
    ViewBag.Title = "My Messages";
}
@*
@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Ihre Nachrichten</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Von</th>
                            <th>Datum</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            if (item.isActive)
                            {
                                <tr style="background-color:lightgreen">
                                    <td>@item.sender</td>
                                    <td>@item.messageDate</td>
                                    <td>
                                        <a href="@Url.Action("ReadMessage","ParentUser",new {messageId=item.Id })" class="btn btn-sm btn-warning">Lesen</a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.sender</td>
                                    <td>@item.messageDate</td>
                                    <td>
                                        <a href="@Url.Action("ReadMessage","ParentUser",new {messageId=item.Id })" class="btn btn-sm btn-warning">Lesen</a>
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}
else
{
    <div class="col-md-12">
        <p>Keine Nachrichten verfügbar.</p>
    </div>

}

*@