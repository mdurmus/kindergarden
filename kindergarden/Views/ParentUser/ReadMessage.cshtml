@model personMessage

@{
    ViewBag.Title = Model.sender + "Message";
}
<div class="col-md-12">
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Von: @Model.sender</h3>
        </div>
        <div class="box-body">
            <p>Datum: @Model.messageDate</p>
            <p>Nachricht: @Model.messageText</p>
        </div>
        <div class="box-footer">
            <a href="@Url.Action("DeleteMessage","ParentUser",new {messageId=Model.Id })" class="btn btn-danger" onclick="return confirm('Sind Sie sicher?')">Löschen</a>
            <a href="@Url.Action("MyMessages","ParentUser")" class="btn btn-primary pull-right">Zurück</a>
        </div>
    </div>

</div>