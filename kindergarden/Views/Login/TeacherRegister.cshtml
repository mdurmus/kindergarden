@model kindergarden.Person
    @{
        Layout = null;
    }
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Kita365</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.7 -->
        <link rel="stylesheet" href=@Url.Content("~/Content/bootstrap.min.css")>
        <!-- Font Awesome -->
        <link rel="stylesheet" href=@Url.Content("~/Content/font-awesome.min.css")>
        <!-- Theme style -->
        <link rel="stylesheet" href=@Url.Content("~/Content/AdminLTE.min.css")>
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <!-- Google Font -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </head>
    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="https://www.kita365.de" target="_blank"><img src="~/Content/img/kitaLogo.png" class="img-responsive center-block" /></a>
            </div>
            <div class="login-box-body">
                <h4 class="text-bold center-block text-center" style="color:red;">Erzieher/innen Daten</h4>
                @using (Html.BeginForm("TeacherRegister", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <center style="color:royalblue;"> @Html.ValidationMessage("GUID") </center>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="control-label" for="name">Name</label>
                            <input type="text" name="name" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="lastName">Familienname</label>
                            <input type="text" name="lastName" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="username">Email</label>
                            <input type="text" name="Email" class="form-control" required>
                        </div>
                     
                        <div class="form-group">
                            <label class="control-label" for="pass">Kennwort</label>
                            <input type="text" name="pass" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="pass">Aktivierungsschlüssel</label>
                            <input type="text" name="GUID" required class="form-control">
                            <small class="form-text text-muted" style="color:blue;">Den Aktivierungsschlüssel bekommen Sie von der Kita Leitung</small>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" tabindex="3" id="chkDatenschutz" style="width:15px;height:15px;" value="true">                   Akzeptieren Sie unseren <a href="https://www.kita365.de/kitadatenschutz" target="_blank">Datenschutz</a>.
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <input type="submit" id="btnSend" value="Senden" class="btn btn-info btn-block" />
                    </div>

                }

            </div>
            <!-- /.modal -->
        </div>
        <!-- /.login-box -->
        <!-- jQuery 3 -->
        <script src=@Url.Content("~/Scripts/jquery-3.4.1.min.js")></script>
        <!-- Bootstrap 3.3.7 -->
        <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
        <script>
            $(document).ready(function () {
                $('#btnSend').prop('disabled', true);
                $('#chkDatenschutz').click(function () {
                    if ($(this).prop("checked") == true) {
                        $('#btnSend').prop('disabled', false);
                    }
                    else if ($(this).prop("checked") == false) {
                        $('#btnSend').prop('disabled', true);
                    }
                });
            });
        </script>
    </body>
</html>