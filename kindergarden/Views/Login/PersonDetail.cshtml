@model kindergarden.Person
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Kita365</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href=@Url.Content("~/Content/bootstrap.min.css")>
    <!-- Font Awesome -->
    <link rel="stylesheet" href=@Url.Content("~/Content/font-awesome.min.css")>
    <!-- Theme style -->
    <link rel="stylesheet" href=@Url.Content("~/Content/AdminLTE.min.css")>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box" style="width:750px !important;">
        <div class="login-logo">
            <a href="https://www.kita365.de" target="_blank"><img src="~/Content/img/kitaLogo.png" class="img-responsive center-block" /></a>
        </div>

        <div class="login-box-body">
            <h4 class="text-bold center-block text-center" style="color:red;">Personendaten</h4>
            @using (Html.BeginForm("PersonDetail", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label" for="Street">Straße</label>
                        <input type="text" name="Street" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="Number">Nummer</label>
                        <input type="text" name="Number" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="PostCode">PLZ</label>
                        <input type="text" name="PostCode" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="City">Ort</label>
                        <input type="text" name="City" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="State">Bundesland</label>
                        <input type="text" name="State" required class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="PersonId" value="@ViewBag.PersonId">
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="submit" value="Speichern" class="btn btn-info btn-block" />
                </div>

            }

        </div>
        <!-- /.modal -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src=@Url.Content("~/Scripts/jquery-3.4.1.min.js")></script>
    <!-- Bootstrap 3.3.7 -->
    <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
</body>
</html>