@model kindergarden.ViewModels.AdminRegisterVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>KinderGarten | Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href=@Url.Content("~/Content/bootstrap.min.css")>
    <!-- Font Awesome -->
    <link rel="stylesheet" href=@Url.Content("~/Content/font-awesome.min.css")>
    <!-- Theme style -->
    <link rel="stylesheet" href=@Url.Content("~/Content/AdminLTE.min.css")>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="https://www.kita365.de" target="_blank"><img src="~/Content/img/kitaLogo.png" class="img-responsive center-block" /></a>
        </div>
        <!-- /.login-logo -->

        <div class="login-box-body">
            <h4 class="text-bold center-block text-center" style="color:red;">Informationen zum Administratorkonto</h4>
            @using (Html.BeginForm("SchoolRegister", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">

                    <div class="form-group">
                        <label class="control-label" for="name">Name</label>
                        <input type="text" name="person.name" class="form-control" required />

                    </div>
                    <div class="form-group">
                        <label class="control-label" for="lastName">Familienname</label>
                        <input type="text" name="person.lastName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="username">Email</label>
                        <input type="email" name="person.Email" required class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="control-label" for="gsm">Handynummer</label>
                        <input type="text" name="person.gsm" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="pass">Passwort</label>
                        <input type="text" name="person.pass" class="form-control" required />
                    </div>
                    <hr />
                    <h4 class="text-bold center-block text-center" style="color:red;">Institution Informationen</h4>
                    <div class="form-group">
                        <label class="control-label" for="school.Name">Name der Institution</label>
                        <input type="text" name="school.Name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.Phone">Telefonnummer</label>
                        <input type="text" name="school.Phone" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.Email">Email</label>
                        <input type="email" name="school.Email" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.Street">Straße</label>
                        <input type="text" name="school.Street" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.Number">Nummer</label>
                        <input type="text" name="school.Number" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.PostalCode">PLZ</label>
                        <input type="text" name="school.PostalCode" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.City">Stadt</label>
                        <input type="text" name="school.City" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="school.State">Bundesland</label>
                        <input type="text" name="school.State" required class="form-control" />
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" tabindex="3" id="chkDatenschutz" style="width:15px;height:15px;" value="true">                   Akzeptieren Sie unseren <a href="https://www.kita365.de/kitadatenschutz" target="_blank">Datenschutz</a>.
                            </label>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="submit" id="btnSend" value="Senden" class="btn btn-info btn-block" />
                </div>

            }

        </div>
        <!-- /.modal -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src=@Url.Content("~/Scripts/jquery-3.4.1.min.js")></script>
    <!-- Bootstrap 3.3.7 -->
    <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
    <script>
        $(document).ready(function () {
            $('#btnSend').prop('disabled', true);
            $('#chkDatenschutz').click(function () {
                if ($(this).prop("checked") == true) {
                    $('#btnSend').prop('disabled', false);
                }
                else if ($(this).prop("checked") == false) {
                    $('#btnSend').prop('disabled', true);
                }
            });
        });
    </script>
</body>
</html>