@model activities
@{ViewBag.Title = "EditActivity";}
<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Aktivität bearbeiten</h3>
        </div>
        @using (Html.BeginForm("EditActivity", "AdminUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(p => p.subject, "Thema", new { htmlAttributes = new { @class = "control-label" } })
                    @Html.EditorFor(p => p.subject, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.miniText, "Mini Text", new { htmlAttributes = new { @class = "control-label" } })
                    @Html.EditorFor(p => p.miniText, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.fullText, "Full Text", new { htmlAttributes = new { @class = "control-label" } })
                    @Html.EditorFor(p => p.fullText, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.adminText, "Admin Text", new { htmlAttributes = new { @class = "control-label" } })
                    @Html.EditorFor(p => p.adminText, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.location, "Ort der Aktivität", new { htmlAttributes = new { @class = "control-label" } })
                    @Html.EditorFor(p => p.location, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div>
                    @Html.Hidden("startDate", Model.startDate)
                    @Html.Hidden("finishDate", Model.finishDate)
                    @Html.Hidden("Id", Model.Id)
                    @Html.Hidden("SchoolId", Model.SchoolId)
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary btn-block">Aktivität speichern</button>
            </div>
        }
    </div>
</div>