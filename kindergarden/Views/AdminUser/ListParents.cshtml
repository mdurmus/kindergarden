@model IEnumerable<Person>

@{
    ViewBag.Title = "List Parents";
}

@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Alle Eltern (Passwort zurücksetzen Code 1234)</h3>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Familienname</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Email</td>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td>
                                    <a href="@Url.Action("ResetParentPassword","AdminUser",new {parentId=item.Id })" onclick="return confirm('Sind Sie sicher?')" class="btn btn-warning">Passwort zurücksetzen</a> |
                                    <a href="@Url.Action("DeleteParent","AdminUser",new {Id=item.Id })" onclick="return confirm('Sind Sie sicher?')" class="btn btn-danger">Löschen</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Keine Daten!</h3>
            </div>
        </div>
    </div>
}