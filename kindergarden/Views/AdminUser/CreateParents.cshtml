@model Person
@{
    ViewBag.Title = "Create Parent";
}
<div class="col-md-12">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Benutzer erstellen</h3>
        </div>
        @using (Html.BeginForm("CreateParents", "AdminUser", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    <label class="control-label" for="name">Name</label>
                    <input type="text" name="name" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label" for="lastName">Familienname</label>
                    <input type="text" name="lastName" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label" for="username">Benutzername</label>
                    <input type="text" name="username" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="control-label" for="gsm">Telefonnumer</label>
                    <input type="text" name="gsm" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label" for="pass">Passwort</label>
                    <input type="text" name="pass" class="form-control">
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info btn-block">Benutzer erstellen</button>
            </div>
        }
    </div>
</div>