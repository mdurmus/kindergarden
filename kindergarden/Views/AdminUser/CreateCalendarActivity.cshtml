@model kindergarden.Models.CalendarActivity
@{
    ViewBag.Title = "CreateCalendarActivity";
}
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Aktivität Erstellen</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("CreateCalendarActivity", "AdminUser", FormMethod.Post, new { novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()

                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label">Start Datum</label>
                        <input type="datetime-local" class="form-control" required name="StartDate" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">End Datum</label>
                        <input type="datetime-local" class="form-control" required name="FinishDate" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Text</label>
                        <input type="text" class="form-control" required name="Text" />
                    </div>
                </div>
                <div class="box-footer">
                    <input type="submit" class="btn btn-primary btn-block" value="Erstellen" />
                </div>
            }
        </div>
    </div>