@model IEnumerable<kindergarden.Models.CalendarActivity>
@{
    ViewBag.Title = "List Calendar Activitiy";
}
    <div class="col-xs-12">
        @Html.ActionLink("Aktivität Erstellen", "CreateCalendarActivity", "AdminUser",null, new { @class = "btn btn-success btn-block" })
    </div>
@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Kalenderaktivität auflisten</h3>
                <div class="box-tools">
                    @using (Html.BeginForm("ListCalendarActivitiy", "AdminUser", FormMethod.Get))
                    {
                        <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
                            <input type="date" name="date" class="form-control pull-right" formnovalidate="formnovalidate">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover" id="tblDatajs">
                    <tbody>
                        <tr>
                            <th>Start Datum</th>
                            <th>End Datum</th>
                            <th>Text</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StartDate.ToString()</td>
                                <td>@item.FinishDate.ToString()</td>
                                <td>@item.Text</td>
                                <td>
                                    @Html.ActionLink("Löschen", "DeleteCalendarActivity", "AdminUser", new { Id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Keine Daten</h3>
                <div class="box-tools">
                    <div class="pull-right">
                        @Html.ActionLink("Aktivität Erstellen", "CreateCalendarActivity", "AdminUser", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}




