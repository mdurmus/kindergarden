
@{
    ViewBag.Title = "Create News";
}
<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Mitteilungen erstellen</h3>
        </div>
        @using (Html.BeginForm("CreateNews", "AdminUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="form-group">
                    <label for="subject" class="control-label">Thema</label>
                    <input type="text" class="form-control" required name="subject">
                </div>
                <div class="form-group">
                    <label for="newsText" class="control-label">Text</label>
                    <textarea type="text" class="form-control" name="newsText" rows="4" cols="50"></textarea>
                </div>
                <div class="form-group">
                    <label for="url" class="control-label">Link</label>
                    <input type="url" class="form-control" name="url">
                </div>
                <div class="form-group">
                    <label for="priority" class="control-label">Priorität</label>
                    @Html.DropDownList("priority", (ViewBag.Priority as SelectList), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="pictures">Daten</label>
                    <input type="file" name="file" accept="*.jpg, *.jpeg, *.doc, *.pdf">
                    <p class="help-block">Nur jpg, word und pdf datein.</p>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary btn-block">Mitteilung erstellen</button>
            </div>
        }
    </div>
</div>