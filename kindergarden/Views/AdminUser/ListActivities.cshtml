@model IEnumerable<activities>
@{
    ViewBag.Title = "ListActivities";
}

@if (Model.Count() > 0)
{
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Alle Aktivitäten</h3>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Thema</th>
                            <th>Startdatum</th>
                            <th>Enddatum</th>
                            <th>Status</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.subject</td>
                                <td>@item.startDate.Value.ToString("dd.MM.yyyy")</td>
                                <td>@item.finishDate.Value.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (item.isActive == true)
                                    {<span class="label label-success">Aktiv</span>}
                                    else
                                    {<span class="label label-danger">Passiv</span>}
                                </td>
                                <td>
                                    <a href="@Url.Action("DetailActivity","AdminUser",new {Id=item.Id })" class="btn btn-primary"> Detail</a>
                                    <a href="@Url.Action("EditActivity","AdminUser",new {Id=item.Id })" class="btn btn-warning"> Bearbeiten</a>
                                    <a href="@Url.Action("ChangeActivityStatus","AdminUser",new {Id=item.Id })" onclick="return confirm('Sind Sie sicher?')" class="btn btn-success">Aktiv/Passiv</a>
                                    <a href="@Url.Action("DeleteActivity","AdminUser",new {Id=item.Id })" onclick="return confirm('Sind Sie sicher?')" class="btn btn-danger"> Löschen</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Keine Daten!</h3>
            </div>
        </div>
    </div>
}