@model IEnumerable<news>
@{
    ViewBag.Title = "Teacher Page";
}

<div class="col-md-12">

    <div class="col-md-4">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@ViewBag.Activities</h3>

                <p>Aktivitäten</p>
            </div>
            <div class="icon">
                <i class="fa fa-universal-access"></i>
            </div>
            <a href="@Url.Action("AllActivities","ParentUser")" class="small-box-footer">Detail <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-md-4">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@ViewBag.Messages</h3>

                <p>Nachrichten</p>
            </div>
            <div class="icon">
                <i class="fa fa-envelope"></i>
            </div>
            <a href="@Url.Action("MyMessage","Message")" class="small-box-footer">Detail <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-md-4">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@ViewBag.News</h3>

                <p>Mitteilungen</p>
            </div>
            <div class="icon">
                <i class="fa fa-newspaper-o"></i>
            </div>
            <a href="@Url.Action("AllNews","TeacherUser")" class="small-box-footer">Detail <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

</div>

<div class="col-md-12">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Wichtige Mitteilungen</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Priorität</th>
                            <th>Thema</th>
                            <th>Link</th>
                            <th>Daten</th>
                            <th>Text</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td style="width:20%;">
                            @if (item.priority == Priority.Prio0)
                            {
                                <span class="label label-danger center-block">Prio0</span>
                            }
                            else if (item.priority == Priority.Prio1)
                            {
                                <span class="label label-warning center-block">Prio1</span>
                            }
                        </td>
                        <td>@item.subject</td>
                        <td>
                            @if (item.url != null)
                            {
                                <a href="@item.url" target="_blank" class="btn btn-primary btn-xs">Link</a>
                            }
                            else
                            {
                                <p>---</p>
                            }
                        </td>
                        <td>
                            @if (item.filePath != null)
                            {
                                <a href="@Url.Content(item.filePath)" class="btn btn-warning btn-xs" target="_blank">Daten</a>
                            }
                            else
                            {
                                <p>---</p>
                            }
                        </td>
                        <td width="60%">
                            @if (item.newsText != null && item.newsText.Length > 50)
                            {
                                @item.newsText.Substring(0, 50)
                            }
                            else
                            {
                                @item.newsText
                            }

                        </td>
                    </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>