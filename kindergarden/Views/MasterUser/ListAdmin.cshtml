@model IEnumerable<Person>
@{
    ViewBag.Title = "ListAdmin";
}

@if (Model.Count() > 0)
{

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Registered Admin Users</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example" class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Schule</th>
                            <th>Name</th>
                            <th>Familienname</th>
                            <th>Prozess</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.School.Name</td>
                                <td>@item.Name</td>
                                <td>@item.LastName</td>
                                <td><a href="@Url.Action("DeleteAdmin","MasterUser",new {id=item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Sind Sie sicher?')">Delete</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

}
else
{
    <p>No Admin Accounts</p>
}
