@model IEnumerable<kindergarden.Models.School>
@{
    ViewBag.Title = "ListSchool";
}


@if (Model.Count() > 0)
{
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Alle Schule</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>E-Mail</th>
                            <th>Nummer</th>
                            <th>Prozess</th>

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SchoolId</td>
                                <td>@item.Name</td>
                                <td><a href="mailto:@item.Email" target="_blank">@item.Email</a></td>
                                <td><a href="tel:@item.Phone" target="_blank">@item.Phone</a></td>
                                <td>
                                    @Html.ActionLink("Detail", "SchoolDetail", "MasterUser", new { schoolId = item.SchoolId }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
}
else
{
    <p>Kayitli okul yok</p>
}
