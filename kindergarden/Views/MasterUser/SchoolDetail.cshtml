    <!-- /.box -->
</div>

<div class="col-md-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Alle Eltern</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <th>Nachname</th>
                        <th>E-mail</th>
                        <th>Registrieren</th>
                    </tr>
                    @foreach (var item in Model.person.Where(p => p.IsTeacher == true))
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.LastName</td>
                            <td><a href="tel:@item.Email" target="_blank">@item.Email</a></td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>

<div class="col-md-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <i class="fa fa-warning"></i>

            <h3 class="box-title">Alerts</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            @Html.ActionLink("Löschen Kita", "DeleteSchoolWithRecords", "MasterUser", new { schoolId = Model.SchoolId }, new { @class = "btn btn-danger btn-block", onclick = "return confirm('Hepsini silcem bi sakat olmasin!!')" })
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>