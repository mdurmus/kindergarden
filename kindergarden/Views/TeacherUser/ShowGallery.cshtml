@model IEnumerable<kindergarden.Models.galleryImage>
@{
    ViewBag.Title = "ShowGallery";
}

@foreach (var item in Model)
{
    <div class="col-md-3">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.GalleryName</h3>
            </div>
            <div class="box-body">
                <img src="@Url.Content(item.filePath)" class="img img-responsive" />
            </div>
        </div>
    </div>
}
